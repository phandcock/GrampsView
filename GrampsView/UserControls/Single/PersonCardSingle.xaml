<?xml version="1.0" encoding="UTF-8" ?>
<ucon:SingleCardControlTemplate
    x:Class="GrampsView.UserControls.PersonCardSingle"
     xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:GrampsView.Data.Model"
    xmlns:ucon="clr-namespace:GrampsView.UserControls"
    x:DataType="models:HLinkPersonModel">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Style="{DynamicResource SSCardLabelStyleVerySmall}"
            Text="{Binding DeRef.GPersonNamesCollection.GetPrimaryName.DeRef.DefaultTextShort, Mode=OneWay}"
            VerticalTextAlignment="Start" />
    </Grid>
</ucon:SingleCardControlTemplate>