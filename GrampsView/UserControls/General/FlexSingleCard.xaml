<!--  This exists as CollectionView as faster than FLexLayout for lists  -->

<Frame
    x:Class="GrampsView.UserControls.FlexSingleCard"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:convertor="clr-namespace:GrampsView.Converters"
    xmlns:ucon="clr-namespace:GrampsView.UserControls"
    x:Name="CollectionSingleCardRoot"
    Margin="0"
    Padding="0"
    BackgroundColor="Transparent"
    SizeChanged="CollectionSingleCardRoot_SizeChanged">

    <Frame.Resources>
        <convertor:StringToVisibleConverter x:Key="SingleToVisible" />
    </Frame.Resources>

    <FlexLayout
        x:Name="theCollectionView"
        Grid.Column="0"
        BindableLayout.ItemTemplate="{Binding FsctTemplate, Source={x:Reference CollectionSingleCardRoot}, Mode=OneWay}"
        BindableLayout.ItemsSource="{Binding FsctSource, Source={x:Reference CollectionSingleCardRoot}, Mode=OneWay}"
        IsVisible="{Binding FsctSource.Visible, Source={x:Reference CollectionSingleCardRoot}, Mode=OneWay}"
        Style="{StaticResource CollectionViewBase}"
        Wrap="Wrap" />
</Frame>