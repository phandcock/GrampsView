<Grid
    x:Class="GrampsView.UserControls.ActivityDisplay"
     xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="ActivityDisplayRoot">

    <Grid BackgroundColor="{AppThemeBinding Dark={DynamicResource SecondaryDark}, Light={DynamicResource SecondaryLight}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <ActivityIndicator
            Grid.Row="0"
            Grid.Column="0"
            BackgroundColor="Transparent"
            IsRunning="True"
            Color="{AppThemeBinding Dark={DynamicResource OnSecondaryContainerDark},
                                    Light={DynamicResource OnSecondaryLight}}" />

        <Label
            Grid.Row="0"
            Grid.Column="1"
            Text="{Binding ., Mode=OneWay}"
            TextColor="{AppThemeBinding Dark={DynamicResource OnSecondaryContainerDark},
                                        Light={DynamicResource OnSecondaryLight}}"
            VerticalTextAlignment="Center" />
    </Grid>
</Grid>