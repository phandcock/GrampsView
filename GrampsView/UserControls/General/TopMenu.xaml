<Grid
    x:Class="GrampsView.UserControls.TopMenu"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:GrampsView.ViewModels"
    xmlns:ssharp="clr-namespace:SharedSharp.Resources.Styles;assembly=SharedSharp"
    x:Name="TopMenuRoot"
    Margin="0"
    Padding="0"
    x:DataType="viewmodels:ViewModelBase"
    MinimumHeightRequest="50"
    MinimumWidthRequest="100"
    Style="{StaticResource GVPageTitleStyle}"
    VerticalOptions="Center">

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Image
        Grid.Row="0"
        Grid.Column="0"
        Margin="10"
        Style="{StaticResource GVSymbolconPageHeaderType}">
        <Image.Source>
            <FontImageSource
                FontFamily="IconFont"
                Glyph="{Binding BaseTitleIcon}"
                Size="44"
                Color="{AppThemeBinding Dark={StaticResource OnSurfaceDark},
                                        Light={StaticResource OnSurfaceLight}}" />
        </Image.Source>
    </Image>

    <Label
        Grid.Row="0"
        Grid.Column="1"
        Margin="0"
        Style="{StaticResource GVLabelPageHeaderTitleStyle}"
        Text="{Binding BaseTitle, Mode=OneWay}" />
</Grid>