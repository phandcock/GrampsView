<Frame
    x:Class="GrampsView.UserControls.BottomMenu"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="clr-namespace:Prism.Navigation.Xaml;assembly=Prism.Forms"
    x:Name="BottomMenuRoot"
    Style="{StaticResource FrameBottomMenu}">

    <StackLayout HorizontalOptions="Start" Orientation="Horizontal">
        <Button
            Padding="0"
            Command="{prism:GoBack GoBackType=ToRoot}"
            Style="{StaticResource GVButtonFont}">
            <Button.ImageSource>
                <FontImageSource FontFamily="{StaticResource MaterialFontFamily}" Glyph="{Binding HubButtonGlyph, Source={x:Reference BottomMenuRoot}}" />
            </Button.ImageSource>
        </Button>

        <Button
            x:Name="SearchButton"
            Padding="0"
            Command="{prism:NavigateTo 'SearchPage'}"
            FontFamily="{StaticResource MaterialFontFamily}"
            Style="{StaticResource GVButtonFont}">
            <Button.ImageSource>
                <FontImageSource FontFamily="{StaticResource MaterialFontFamily}" Glyph="{Binding SearchButtonGlyph, Source={x:Reference BottomMenuRoot}}" />
            </Button.ImageSource>
        </Button>

        <Label
            Text="{Binding StatusText, Source={x:Reference BottomMenuRoot}, Mode=OneWay}"
            TextColor="{AppThemeBinding Dark={StaticResource DarkOnSecondaryColor},
                                        Light={StaticResource LightOnSecondaryColor}}"
            VerticalTextAlignment="Center" />
    </StackLayout>
</Frame>