<Frame
    x:Class="GrampsView.UserControls.MediaImageFull"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:common="clr-namespace:GrampsView.Common"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    x:Name="MediaImageFullRoot"
    Margin="0"
    Padding="0"
    BackgroundColor="Transparent"
    BindingContextChanged="MediaImageFull_BindingContextChanged"
    HasShadow="True"
    IsVisible="True">

    <Frame.Content>

        <ffimageloading:CachedImage
            x:Name="daImage"
            Aspect="AspectFit"
            BackgroundColor="Transparent"
            CacheType="All"
            DownsampleToViewSize="True"
            Error="DaImage_Error"
            HeightRequest="{Binding CardLargeWidth, Source={x:Static common:CardSizes.Current}, Mode=OneWay}"
            IsVisible="True"
            LoadingPlaceholder="ic_launcher.png"
            MinimumHeightRequest="50"
            MinimumWidthRequest="50"
            RetryCount="3"
            RetryDelay="1000" />
    </Frame.Content>
</Frame>