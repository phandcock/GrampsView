<!--  This exists as CollectionView as faster than FLexLayout for lists  -->

<Frame
    x:Class="GrampsView.UserControls.CollectionSingleCard"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:convertor="clr-namespace:GrampsView.Converters"
    x:Name="CollectionSingleCardRoot"
    Margin="0"
    Padding="0"
    BackgroundColor="Transparent"
    IsVisible="{Binding FsctSource.Visible, Source={x:Reference CollectionSingleCardRoot}, Mode=OneWay}"
    SizeChanged="CollectionSingleCardRoot_SizeChanged">

    <Frame.Resources>
        <convertor:StringToVisibleConverter x:Key="StringToVisible" />
    </Frame.Resources>

    <StackLayout>
        <Grid>
            <Frame
                x:Name="LLCardLargeFrame"
                Margin="0"
                Padding="3"
                BackgroundColor="{AppThemeBinding Dark={StaticResource SecondaryColorDark},
                                                  Light={StaticResource SecondaryColorLight}}"
                HorizontalOptions="FillAndExpand"
                IsVisible="{Binding FsctSource.Title, Source={x:Reference CollectionSingleCardRoot}, Mode=OneWay, Converter={StaticResource StringToVisible}}"
                Style="{DynamicResource FlexSingleCollection}">
                <Label
                    x:Name="LLCardLargeTitle"
                    Margin="0"
                    Style="{StaticResource GVHeaderStyleMedium}"
                    Text="{Binding FsctSource.Title, Source={x:Reference CollectionSingleCardRoot}, Mode=OneWay}"
                    TextColor="Black" />
            </Frame>
        </Grid>

        <FlexLayout
            x:Name="theCollectionView"
            Grid.Column="0"
            BindableLayout.ItemTemplate="{Binding FsctTemplate, Source={x:Reference CollectionSingleCardRoot}, Mode=OneWay}"
            BindableLayout.ItemsSource="{Binding FsctSource, Source={x:Reference CollectionSingleCardRoot}, Mode=OneWay}"
            MinimumHeightRequest="100"
            Style="{StaticResource FlexLayoutCards}">

            <!--<FlexLayout.Header>
            <Grid>
                <Frame
                    x:Name="LLCardLargeFrame"
                    Margin="0"
                    Padding="3"
                    BackgroundColor="MediumPurple"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="{Binding Title, Mode=OneWay, Converter={StaticResource StringToVisible}}"
                    Style="{DynamicResource FlexSingleCollection}">
                    <Label
                        x:Name="LLCardLargeTitle"
                        Margin="0"
                        Style="{DynamicResource GVHeaderStyleLarge}"
                        Text="{Binding Title, Mode=OneWay}"
                        TextColor="Black" />
                </Frame>
            </Grid>
        </FlexLayout.Header>-->
        </FlexLayout>
    </StackLayout>
</Frame>