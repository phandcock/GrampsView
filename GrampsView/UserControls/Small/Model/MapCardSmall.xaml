<ucon:SmallCardControlTemplate
    x:Class="GrampsView.UserControls.MapCardSmall"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:GrampsView.Models.HLinks.Models"
    xmlns:ucon="clr-namespace:GrampsView.UserControls"
    x:DataType="models:HLinkMapModel">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Style="{DynamicResource SSCardLabelStyleSmall}"
            Text="{Binding DeRef, Mode=OneWay}" />
    </Grid>
</ucon:SmallCardControlTemplate>