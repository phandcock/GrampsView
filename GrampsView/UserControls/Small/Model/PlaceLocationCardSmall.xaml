<ucon:SmallCardControlTemplate
    x:Class="GrampsView.UserControls.PlaceLocationCardSmall"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:GrampsView.Data.Model"
    xmlns:ucon="clr-namespace:GrampsView.UserControls"
    x:DataType="models:PlaceLocationModel"
    IsVisible="{Binding Valid, Mode=OneWay}">

    <StackLayout
        Margin="0"
        Padding="0"
        Spacing="1"
        VerticalOptions="StartAndExpand">

        <Label Style="{DynamicResource GVCardLabelStyleSmall}" Text="{Binding GStreet, Mode=OneWay}" />

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Style="{DynamicResource GVCardLabelStyleSmall}"
            Text="{Binding GLocality, Mode=OneWay}" />
        <Label Style="{DynamicResource GVCardLabelStyleSmall}" Text="{Binding GCity, Mode=OneWay}" />

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Style="{DynamicResource GVCardLabelStyleSmall}"
            Text="{Binding GParish, Mode=OneWay}" />
        <Label Style="{DynamicResource GVCardLabelStyleSmall}" Text="{Binding GCounty, Mode=OneWay}" />

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Style="{DynamicResource GVCardLabelStyleSmall}"
            Text="{Binding GState, Mode=OneWay}" />
        <Label Style="{DynamicResource GVCardLabelStyleSmall}" Text="{Binding GCountry, Mode=OneWay}" />

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Style="{DynamicResource GVCardLabelStyleSmall}"
            Text="{Binding GPostal, Mode=OneWay}" />
        <Label Style="{DynamicResource GVCardLabelStyleSmall}" Text="{Binding GPhone, Mode=OneWay}" />
    </StackLayout>
</ucon:SmallCardControlTemplate>