<ucon:SmallCardControlTemplate
    x:Class="GrampsView.UserControls.URLCardSmall"
     xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:GrampsView.Data.Model"
    xmlns:ucon="clr-namespace:GrampsView.UserControls"
    x:DataType="models:HLinkURLModel">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Style="{DynamicResource SSCardLabelStyleSmall}"
            Text="{Binding DeRef, Mode=OneWay}" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Style="{DynamicResource SSCardLabelStyleVerySmall}"
            Text="{Binding DeRef.GHRef, Mode=OneWay}" />
    </Grid>
</ucon:SmallCardControlTemplate>