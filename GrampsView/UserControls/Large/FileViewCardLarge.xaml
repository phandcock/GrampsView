<?xml version="1.0" encoding="UTF-8" ?>
<Grid
    x:Class="GrampsView.UserControls.FileViewCardLarge"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:markdown="clr-namespace:Xam.Forms.Markdown;assembly=Xam.Forms.MarkdownView"
    x:Name="ChangeLogCardLargeRoot"
    Padding="0"
    BindingContextChanged="ChangeLogCardLargeRoot_BindingContextChanged"
    Style="{DynamicResource GridLargeVariabledCardStyle}">

    <Frame Style="{DynamicResource FrameLargeVariableCardStyleNS}">

        <Grid
            x:Name="controlRoot"
            Margin="0"
            Padding="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <markdown:MarkdownView
                x:Name="mdview"
                Grid.Row="0"
                Grid.Column="0" />
        </Grid>
    </Frame>
</Grid>