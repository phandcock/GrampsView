<?xml version="1.0" encoding="UTF-8" ?>
<Grid
    x:Class="GrampsView.UserControls.MediaCardLarge"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:GrampsView.Data.Model"
    xmlns:sSharpCommon="clr-namespace:SharedSharp.Common;assembly=SharedSharp"
    xmlns:ucon="clr-namespace:GrampsView.UserControls"
    x:Name="MediaCardLargeRoot"
    x:DataType="ucon:MediaCardLarge"
    IsVisible="{Binding TheModel.Valid,Source={Reference MediaCardLargeRoot},Mode=OneWay}"
    Style="{StaticResource SSGridLargeVariableCardStyle}">

    <Border Style="{StaticResource SSBorderLargeFixedCardStyle}" VerticalOptions="Start">

        <Grid
            x:Name="controlRoot"
            Margin="5"
            Padding="5"
            HeightRequest="{Binding MediaDetailImageHeight, Mode=OneWay}"
            WidthRequest="{Binding MediaDetailImageWidth,  Mode=OneWay}">

            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TheModel.UCNavigateCommand}" CommandParameter="{Binding TheModel.DeRef.HLink}" />
            </Grid.GestureRecognizers>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ucon:HLinkVisualDisplay
                x:Name="AnchorImage"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Style="{StaticResource MediaImageStyle}" />

            <Label
                x:Name="MediaObjectTitle"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalOptions="CenterAndExpand"
                HorizontalTextAlignment="Center"
                Style="{StaticResource SSCardLabelStyleSmall}"
                Text="{Binding TheModel.DeRef.GDescription, Mode=OneWay}" />

            <Image
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource GVSymbolIconSmallCardType}">
                <Image.Source>
                    <FontImageSource
                        FontFamily="IconFont"
                        Glyph="{Binding TheModel.HLinkGlyphItem.Symbol}"
                        Color="{Binding TheModel.HLinkGlyphItem.SymbolColour}" />
                </Image.Source>
            </Image>
        </Grid>
    </Border>
</Grid>