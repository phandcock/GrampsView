<?xml version="1.0" encoding="UTF-8" ?>
<ucon:LinkSingleCardControlTemplate
    x:Class="GrampsView.UserControls.FamilyCardLinkSingle"
     xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:GrampsView.Data.Model"
    xmlns:ucon="clr-namespace:GrampsView.UserControls"
    x:DataType="models:HLinkFamilyModel"
    BackgroundColor="{AppThemeBinding Dark={DynamicResource OnTertiaryContainerDark},
                                      Light={DynamicResource OnTertiaryContainerLight}}">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Style="{DynamicResource SSLinkCardSingleStyle}"
            Text="{Binding DeRef, Mode=OneWay}"
            VerticalTextAlignment="Start" />
    </Grid>
</ucon:LinkSingleCardControlTemplate>