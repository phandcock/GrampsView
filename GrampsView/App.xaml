<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="GrampsView.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ssharp="clr-namespace:SharedSharp.Resources.Styles;assembly=SharedSharp">
    <!--
        Define global resources and styles here, that apply to all pages in your app.
    -->
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ssharp:AppThemeDictionary />
                <ssharp:CommonDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

        <ResourceDictionary Source="/Resources/Styles/_Sizes.xaml" />

        <ResourceDictionary Source="/Resources/Styles/_Thickness.xaml" />

        <ResourceDictionary Source="/Resources/Styles/AppViewDictionary.xaml" />

        <ResourceDictionary Source="/Resources/Styles/CardThemeDictionary.xaml" />

        <ResourceDictionary Source="/Resources/Styles/ControlTemplates.xaml" />
    </Application.Resources>
</Application>