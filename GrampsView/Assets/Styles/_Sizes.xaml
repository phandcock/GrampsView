<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--
        ******************************************************
        Margins
        ******************************************************
    -->

    <x:String x:Key="GVPageMargin">
        2%
    </x:String>

    <x:Double x:Key="GVMarginDSmall">
        1
    </x:Double>

    <x:Double x:Key="GVMarginDMedium">
        3
    </x:Double>

    <x:Double x:Key="GVMarginDLarge">
        5
    </x:Double>

    <OnPlatform x:Key="GVCardIconSize" x:TypeArguments="x:Single">
        <On Platform="Android">25</On>
        <On Platform="UWP">25</On>
        <On Platform="iOS">25</On>
    </OnPlatform>

    <OnPlatform x:Key="GVCornerRadius" x:TypeArguments="x:Single">
        <On Platform="Android">3</On>
        <On Platform="UWP">3</On>
        <On Platform="iOS">0,20,0,0</On>
    </OnPlatform>

    <OnPlatform x:Key="CollectionCardListItemMargin" x:TypeArguments="x:Double">
        <On Platform="Android">10</On>
        <On Platform="UWP">5</On>
        <On Platform="iOS">0</On>
    </OnPlatform>
</ResourceDictionary>