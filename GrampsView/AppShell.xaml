<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GrampsView.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:common="clr-namespace:GrampsView.Common"
    xmlns:sharedsharp="clr-namespace:SharedSharp.Common;assembly=SharedSharp"
    xmlns:views="clr-namespace:GrampsView.Views"
    xmlns:ssharp="clr-namespace:SharedSharp.Resources.Styles;assembly=SharedSharp"
    Style="{StaticResource SSShellBaseStyle}">

    <Shell.Resources>
        <ResourceDictionary>

            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>

                    <ssharp:AppThemeDictionary />
                    <ssharp:CommonDictionary />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </ResourceDictionary>
    </Shell.Resources>

    <!--
        Flyout Items
    -->

    <FlyoutItem Title="Hub">
        <FlyoutItem.FlyoutIcon>
            <FontImageSource
                FontFamily="IconFont"
                Glyph="{x:Static common:Constants.IconHub}"
                Color="{AppThemeBinding Dark={DynamicResource OnSurfaceDark},
                                        Light={DynamicResource OnSurfaceLight}}" />
        </FlyoutItem.FlyoutIcon>
        <ShellContent ContentTemplate="{DataTemplate views:HubPage}" Route="HubPage" />
    </FlyoutItem>

