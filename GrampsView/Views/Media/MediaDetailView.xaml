<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GrampsView.Views.MediaDetailPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:common="clr-namespace:GrampsView.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="clr-namespace:GrampsView.Assets.Strings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkitc="clr-namespace:Xamarin.CommunityToolkit.Converters;assembly=Xamarin.CommunityToolkit"
    xmlns:ucon="clr-namespace:GrampsView.UserControls"
    x:Name="MediaDetailPageRoot"
    ControlTemplate="{StaticResource DetailPageTemplate}"
    Style="{DynamicResource GVBaseContentPage}"
    mc:Ignorable="d">

    <NavigationPage.TitleView>
        <ucon:TopMenu />
    </NavigationPage.TitleView>

    <Page.Resources>
        <ResourceDictionary>
            <toolkitc:InvertedBoolConverter x:Key="flipBool" />
        </ResourceDictionary>
    </Page.Resources>

    <!--  Content  -->
    <ScrollView>
        <StackLayout>
            <Frame
                HeightRequest="{Binding MediaDetailImageHeight, Source={x:Static common:CardSizes.Current}, Mode=OneWay}"
                IsVisible="{Binding ShowMediaElement, Converter={StaticResource flipBool}, Mode=OneWay}"
                WidthRequest="{Binding MediaDetailImageWidth, Source={x:Static common:CardSizes.Current}, Mode=OneWay}">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="2" Tapped="OnTapGestureRecognizerTapped" />
                </Frame.GestureRecognizers>
                <StackLayout>
                    <ucon:MediaImageSkia
                        x:Name="daImage"
                        BindingContext="{Binding CurrentHLinkMedia, Mode=OneWay}"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand" />

                    <ucon:InstructionCardLarge BindingContext="{x:Static i18n:AppResources.Media_Detail_Open_File}" HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <Frame
                HeightRequest="300"
                IsVisible="{Binding ShowMediaElement, Mode=OneWay}"
                Style="{StaticResource FrameLargeFixedCardStyle}"
                WidthRequest="{Binding CardLargeDoubleWidth, Source={x:Static common:CardSizes.Current}, Mode=OneWay}">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="2" Tapped="OnTapGestureRecognizerTapped" />
                </Frame.GestureRecognizers>
                <StackLayout>

                    <MediaElement
                        x:Name="daMediaElement"
                        AutoPlay="False"
                        ShowsPlaybackControls="True"
                        Source="{Binding CurrentMediaObject.MediaStorageFilePath, Mode=OneWay}"
                        VerticalOptions="FillAndExpand" />

                    <ucon:InstructionCardLarge BindingContext="{x:Static i18n:AppResources.Media_Detail_Open_File}" HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <ucon:CardGroupHeader BindingContext="{Binding BaseDetail, Mode=OneWay}" />

            <ucon:CollectionSingleCard FsctSource="{Binding CurrentHLinkMedia.GAttributeRefCollection, Mode=OneWay}" FsctTemplate="{StaticResource AttributeCardSingleDT}" />
            <ucon:CollectionSingleCard FsctSource="{Binding CurrentHLinkMedia.GCitationRefCollection, Mode=OneWay}" FsctTemplate="{StaticResource CitationCardSmallDT}" />
            <ucon:CollectionSingleCard FsctSource="{Binding CurrentHLinkMedia.GNoteRefCollection, Mode=OneWay}" FsctTemplate="{StaticResource MediaCardSmallDT}" />
            <!--  TODO Add HLINK to Titles of above  -->
            <ucon:CollectionSingleCard FsctSource="{Binding CurrentMediaObject.GCitationRefCollection, Mode=OneWay}" FsctTemplate="{StaticResource CitationCardSmallDT}" />
            <ucon:CollectionSingleCard FsctSource="{Binding CurrentMediaObject.GNoteRefCollection, Mode=OneWay}" FsctTemplate="{StaticResource NoteCardSmallDT}" />
            <ucon:CollectionSingleCard FsctSource="{Binding CurrentMediaObject.GTagRefCollection, Mode=OneWay}" FsctTemplate="{StaticResource TagCardSmallDT}" />

            <ucon:CardGroupHeader BindingContext="{Binding CurrentMediaObject.BackHLinkReferenceCollection.CardGroupAsProperty, Mode=OneWay}" />
        </StackLayout>
    </ScrollView>

    <!--<Button // TODO finish this
                x:Name="graphbutton"
                Background="{StaticResource GVThemeDominantBackground}"
                ToolTipService.ToolTip="Show Graph">-->
</ContentPage>