<?xml version="1.0" encoding="utf-8" ?>
<views:ViewBasePage
    x:Class="GrampsView.Views.AttributeDetailPage"
     xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ucon="clr-namespace:GrampsView.UserControls"
    xmlns:viewModels="clr-namespace:GrampsView.ViewModels"
    xmlns:views="clr-namespace:GrampsView.Views"
    Title="{Binding BaseTitle}"
    x:DataType="viewModels:AttributeDetailViewModel"
    Style="{StaticResource SSBaseContentPage}"
    mc:Ignorable="d">

    <Shell.TitleView>
        <ucon:TopMenu />
    </Shell.TitleView>

    <ucon:DetailPageControlTemplate>
        <StackLayout>

            <ucon:CardGroupHeader BindingContext="{Binding BaseDetail, Mode=OneWay}" />

            <ucon:FlexSingleCard
                FsctSource="{Binding AttributeObject.GCitationReferenceCollection, Mode=OneWay}"
                FsctTemplate="{StaticResource CitationCardSmallDT}" />
            <ucon:FlexSingleCard
                FsctSource="{Binding AttributeObject.GNoteModelReferenceCollection, Mode=OneWay}"
                FsctTemplate="{StaticResource NoteCardSmallDT}" />
        </StackLayout>
    </ucon:DetailPageControlTemplate>
</views:ViewBasePage>