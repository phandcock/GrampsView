<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GrampsView.Views.FamilyDetailPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ucon="clr-namespace:GrampsView.UserControls"
    ControlTemplate="{StaticResource DetailPageTemplate}"
    Style="{DynamicResource GVBaseContentPage}"
    mc:Ignorable="d">

    <NavigationPage.TitleView>
        <ucon:TopMenu />
    </NavigationPage.TitleView>

    <!--  Content  -->
    <ScrollView>
        <StackLayout>

            <ucon:MediaCardLarge BindingContext="{Binding FamilyObject.HomeImageHLink.ConvertToHLinkMediaModel, Mode=OneWay}" />

            <ucon:CardGroupHeader BindingContext="{Binding BaseDetail, Mode=OneWay}" />

            <ucon:FlexSingleCard FsctSource="{Binding FamilyObject.GEventRefCollection, Mode=OneWay}" FsctTemplate="{StaticResource EventCardSmallDT}" />
            <ucon:FlexSingleCard FsctSource="{Binding FamilyObject.GChildRefCollection, Mode=OneWay}" FsctTemplate="{StaticResource PersonCardSmallDT}" />
            <ucon:FlexSingleCard
                BackgroundColor="AliceBlue"
                FsctSource="{Binding FamilyObject.GCitationRefCollection, Mode=OneWay}"
                FsctTemplate="{StaticResource CitationCardSmallDT}" />
            <ucon:FlexSingleCard
                BackgroundColor="AliceBlue"
                FsctSource="{Binding FamilyObject.GMediaRefCollection, Mode=OneWay}"
                FsctTemplate="{StaticResource MediaCardSmallDT}" />
            <ucon:FlexSingleCard
                BackgroundColor="AliceBlue"
                FsctSource="{Binding FamilyObject.GNoteRefCollection, Mode=OneWay}"
                FsctTemplate="{StaticResource NoteCardSmallDT}" />
            <ucon:FlexSingleCard
                BackgroundColor="AliceBlue"
                FsctSource="{Binding FamilyObject.GAttributeCollection, Mode=OneWay}"
                FsctTemplate="{StaticResource AttributeCardSingleDT}" />
            <ucon:FlexSingleCard FsctSource="{Binding FamilyObject.GTagRefCollection, Mode=OneWay}" FsctTemplate="{StaticResource TagCardSmallDT}" />

            <ucon:CardGroupHeader BindingContext="{Binding FamilyObject.BackHLinkReferenceCollection.CardGroupAsProperty, Mode=OneWay}" />
        </StackLayout>
    </ScrollView>
</ContentPage>