<?xml version="1.0" encoding="utf-8" ?>
<views:ViewBasePage
    x:Class="GrampsView.Views.FirstRunPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="clr-namespace:GrampsView.Assets.Strings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sharedsharpucon="clr-namespace:SharedSharp.UserControls;assembly=SharedSharp"
    xmlns:ucon="clr-namespace:GrampsView.UserControls"
    xmlns:viewmodels="clr-namespace:GrampsView.ViewModels.StartupPages"
    xmlns:views="clr-namespace:GrampsView.Views"
    Title="{Binding BaseTitle}"
    x:DataType="viewmodels:FirstRunViewModel"
    Shell.PresentationMode="ModalNotAnimated"
    Style="{DynamicResource GVBaseContentPage}"
    mc:Ignorable="d">

    <Shell.TitleView>
        <ucon:TopMenu />
    </Shell.TitleView>

    <ScrollView>
        <StackLayout>

            <Image
                HorizontalOptions="Center"
                MinimumHeightRequest="24"
                Source="ic_launcher.png" />

            <sharedsharpucon:InstructionCard HorizontalOptions="Center" InstructionText="{x:Static i18n:AppResources.FirstRun_Header}" />

            <sharedsharpucon:InstructionCard HorizontalOptions="Center" InstructionText="{x:Static i18n:AppResources.FirstRun_IntroductionText}" />

            <sharedsharpucon:InstructionCard HorizontalOptions="Center" InstructionText="{x:Static i18n:AppResources.FirstRun_WhatsNext}" />

            <Button
                Command="{Binding LoadDataCommand}"
                Style="{DynamicResource SSButtonMenu}"
                Text="{x:Static i18n:AppResources.FirstRun_WhatsNewButton}" />
        </StackLayout>
    </ScrollView>
</views:ViewBasePage>