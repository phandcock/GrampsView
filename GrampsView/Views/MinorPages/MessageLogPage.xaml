<?xml version="1.0" encoding="utf-8" ?>
<views:ViewBase
    x:Class="GrampsView.Views.MessageLogPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ucon="clr-namespace:GrampsView.UserControls"
    xmlns:ViewModels="clr-namespace:GrampsView.ViewModels"
    xmlns:views="clr-namespace:GrampsView.Views"
    Title="{Binding BaseTitle}"
    x:DataType="ViewModels:MessageLogViewModel"
    BackgroundColor="Transparent"
    Style="{DynamicResource GVBaseContentPage}">

    <Shell.TitleView>
        <ucon:TopMenu />
    </Shell.TitleView>

    <CollectionView
        x:Name="MajorStatusList"
        Margin="10"
        BackgroundColor="Transparent"
        ItemSizingStrategy="MeasureAllItems"
        ItemTemplate="{StaticResource DataLogEntryLarge}"
        ItemsSource="{Binding DataLoadLog, Mode=OneWay}"
        ItemsUpdatingScrollMode="KeepLastItemInView">
        <CollectionView.ItemsLayout>
            <LinearItemsLayout ItemSpacing="1" Orientation="Vertical" />
        </CollectionView.ItemsLayout>
    </CollectionView>
</views:ViewBase>