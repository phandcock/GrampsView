<?xml version="1.0" encoding="utf-8" ?>
<views:ViewBasePage
    x:Class="GrampsView.Views.SettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="clr-namespace:GrampsView.Assets.Strings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sharedsharpucon="clr-namespace:SharedSharp.UserControls;assembly=SharedSharpNu"
    xmlns:ucon="clr-namespace:GrampsView.UserControls"
    xmlns:viewmodels="clr-namespace:GrampsView.ViewModels"
    xmlns:views="clr-namespace:GrampsView.Views"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    Title="{Binding BaseTitle}"
    x:DataType="viewmodels:SettingsViewModel"
    Style="{DynamicResource GVBaseContentPage}"
    mc:Ignorable="d">

    <Shell.TitleView>
        <ucon:TopMenu />
    </Shell.TitleView>

    <!--  Content  -->
    <ScrollView Padding="10">

        <StackLayout HorizontalOptions="StartAndExpand" Orientation="Vertical">

            <sharedsharpucon:SSHeaderFrameSettings HeaderTitle="Theme Selector">
                <sharedsharpucon:ThemeSelector />
            </sharedsharpucon:SSHeaderFrameSettings>

            <sharedsharpucon:SSHeaderFrameSettings HeaderTitle="Theme Selector">

                <StackLayout>

                    <Frame Style="{DynamicResource SSFrameHeaderStyle}">
                        <Label Style="{DynamicResource SSLabelStyleMedium}" Text="Settings" />
                    </Frame>

                    <StackLayout Orientation="Horizontal">

                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Style="{DynamicResource SSCardLabelStyle}"
                            Text="Sort Item collections on load" />

                        <Switch
                            Grid.Row="0"
                            Grid.Column="1"
                            IsToggled="{Binding SortCollectionsFlag}"
                            Style="{DynamicResource GVSwitchStyle}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Style="{DynamicResource SSCardLabelStyle}"
                            Text="Use first (not last) image from collections." />

                        <Switch
                            Grid.Row="1"
                            Grid.Column="1"
                            IsToggled="{Binding UseFirstImageFlag}"
                            Style="{DynamicResource GVSwitchStyle}" />
                    </StackLayout>
                </StackLayout>
            </sharedsharpucon:SSHeaderFrameSettings>

            <sharedsharpucon:SSHeaderFrameSettings HeaderTitle="Theme Selector">

                <StackLayout>

                    <Frame Style="{DynamicResource SSFrameHeaderStyle}">
                        <Label Style="{DynamicResource GVHeaderStyleMedium}" Text="Defaults" />
                    </Frame>

                    <Label Style="{DynamicResource GVCardLabelStyle}" Text="Default email address for Notes" />

                    <Entry
                        BackgroundColor="{AppThemeBinding Dark={StaticResource SecondaryDark},
                                                          Light={StaticResource SecondaryLight}}"
                        ClearButtonVisibility="WhileEditing"
                        Keyboard="Email"
                        Placeholder="Email"
                        ReturnCommand="{Binding UpdateNoteEmailCommand}"
                        Text="{Binding UpdateNoteEmailAddress}"
                        TextTransform="Lowercase">
                        <Entry.Behaviors>
                            <xct:EmailValidationBehavior
                                DecorationFlags="Trim"
                                InvalidStyle="{DynamicResource GVEntryInvalid}"
                                IsValid="{Binding UpdateNoteEmailValidValue}" />
                        </Entry.Behaviors>
                    </Entry>
                </StackLayout>
            </sharedsharpucon:SSHeaderFrameSettings>

            <sharedsharpucon:SSHeaderFrameSettings HeaderTitle="Theme Selector">

                <StackLayout>

                    <Frame Style="{DynamicResource SSFrameHeaderStyle}">
                        <Label Style="{DynamicResource GVHeaderStyleMedium}" Text="Control Buttons" />
                    </Frame>

                    <Button
                        Command="{Binding TestButtonCommand}"
                        Style="{DynamicResource SSButtonMenu}"
                        Text="{x:Static i18n:AppResources.Settings_ViewAlertDialog}" />
                </StackLayout>
            </sharedsharpucon:SSHeaderFrameSettings>
        </StackLayout>
    </ScrollView>
</views:ViewBasePage>