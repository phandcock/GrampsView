<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GrampsView.Views.SettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:prism="http://prismlibrary.com"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i18n="clr-namespace:GrampsView.Assets.Strings"
    xmlns:common="clr-namespace:GrampsView.Common"
    xmlns:ucon="clr-namespace:GrampsView.UserControls"
    Title="{Binding BaseTitle}"
    prism:ViewModelLocator.AutowireViewModel="True"
    Style="{DynamicResource GVBaseContentPage}"
    mc:Ignorable="d">

    <Shell.TitleView>
        <ucon:TopMenu />
    </Shell.TitleView>

    <!--  Content  -->
    <ScrollView Padding="10">

        <StackLayout HorizontalOptions="StartAndExpand" Orientation="Vertical">

            <Frame HorizontalOptions="Center" Style="{DynamicResource FrameCardLargeFixedStyle}">

                <StackLayout>

                    <Frame Style="{DynamicResource GVFrameHeaderStyle}">
                        <Label Style="{DynamicResource GVCardLabelStyle}" Text="Application Theme" />
                    </Frame>

                    <StackLayout Orientation="Horizontal" RadioButtonGroup.GroupName="AppTheme">

                        <RadioButton ControlTemplate="{StaticResource GVRadioButtonTemplate}" IsChecked="{Binding ThemeButtonLightChecked, Mode=TwoWay}">
                            <RadioButton.Content>
                                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                    <Image>
                                        <Image.Source>
                                            <FontImageSource FontFamily="{StaticResource GlyphFontFamily}" Glyph="{x:Static common:CommonConstants.IconThemeLight}" />
                                        </Image.Source>
                                    </Image>
                                    <Label Style="{DynamicResource GVCardLabelStyle}" Text="Light" />
                                </StackLayout>
                            </RadioButton.Content>
                        </RadioButton>

                        <RadioButton ControlTemplate="{StaticResource GVRadioButtonTemplate}" IsChecked="{Binding ThemeButtonDarkChecked, Mode=TwoWay}">
                            <RadioButton.Content>
                                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                    <Image>
                                        <Image.Source>
                                            <FontImageSource FontFamily="{StaticResource GlyphFontFamily}" Glyph="{x:Static common:CommonConstants.IconThemeDark}" />
                                        </Image.Source>
                                    </Image>
                                    <Label Style="{DynamicResource GVCardLabelStyle}" Text="Dark" />
                                </StackLayout>
                            </RadioButton.Content>
                        </RadioButton>

                        <RadioButton ControlTemplate="{StaticResource GVRadioButtonTemplate}" IsChecked="{Binding ThemeButtonSystemChecked, Mode=TwoWay}">
                            <RadioButton.Content>
                                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                    <Image>
                                        <Image.Source>
                                            <FontImageSource FontFamily="{StaticResource GlyphFontFamily}" Glyph="{x:Static common:CommonConstants.IconThemeSystem}" />
                                        </Image.Source>
                                    </Image>
                                    <Label Style="{DynamicResource GVCardLabelStyle}" Text="System" />
                                </StackLayout>
                            </RadioButton.Content>
                        </RadioButton>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <Button
                Command="{Binding ForceUpdateCheckCommand}"
                Style="{DynamicResource GVButtonMenu}"
                Text="{x:Static i18n:AppResources.Settings_ForceUpdateCheck}" />

            <BoxView />

            <Button
                Command="{Binding UCNavigateCommand}"
                Style="{DynamicResource GVButtonMenu}"
                Text="{x:Static i18n:AppResources.Settings_GotoMessageLog}" />

            <Button
                Command="{Binding TestCommand}"
                Style="{DynamicResource GVButtonMenu}"
                Text="{x:Static i18n:AppResources.Settings_ViewAlertDIalog}" />
        </StackLayout>
    </ScrollView>
</ContentPage>