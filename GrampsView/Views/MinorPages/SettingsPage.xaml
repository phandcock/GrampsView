<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GrampsView.Views.SettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prismnav="clr-namespace:Prism.Navigation.Xaml;assembly=Prism.Forms"
    ControlTemplate="{StaticResource DetailPageTemplate}"
    Style="{DynamicResource GVBaseContentPage}"
    mc:Ignorable="d">

    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">

            <Image Style="{DynamicResource GVSymbolconPageHeaderType}">
                <Image.Source>
                    <FontImageSource
                        FontFamily="{DynamicResource MaterialFontFamily}"
                        Glyph="{Binding BaseTitleIcon}"
                        Size="44"
                        Color="{AppThemeBinding Dark={StaticResource PrimaryColorDark},
                                                Light={StaticResource LightPrimaryColor}}" />
                </Image.Source>
            </Image>

            <Label Style="{DynamicResource GVLabelPageHeaderTitleStyle}" Text="{Binding BaseTitle, Mode=OneWay}" />
        </StackLayout>
    </NavigationPage.TitleView>

    <!--  Content  -->
    <ScrollView Padding="10">

        <StackLayout HorizontalOptions="StartAndExpand" Orientation="Vertical">

            <Frame HorizontalOptions="Center" Style="{DynamicResource FrameCardStyle}">

                <StackLayout BackgroundColor="{AppThemeBinding Dark={StaticResource PrimaryColorDark}, Light={StaticResource LightPrimaryColor}}" Orientation="Horizontal">

                    <StackLayout>
                        <RadioButton
                            GroupName="AppTheme"
                            IsChecked="{Binding ThemeButtonLightChecked, Mode=TwoWay}"
                            Text="Force Light Theme" />
                        <RadioButton
                            GroupName="AppTheme"
                            IsChecked="{Binding ThemeButtonDarkChecked, Mode=TwoWay}"
                            Text="Force Dark Theme" />
                        <RadioButton
                            GroupName="AppTheme"
                            IsChecked="{Binding ThemeButtonSystemChecked, Mode=TwoWay}"
                            Text="Use Operating System Theme" />
                    </StackLayout>
                </StackLayout>
            </Frame>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />

                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />

                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />

                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <!--  Primary and Secondary  -->
                <Label
                    Grid.Row="0"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource BackgroundColorDark},
                                                      Light={StaticResource LightBackgroundColor}}"
                    Text="Primary and Secondary Colours" />

                <Label
                    Grid.Row="1"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource PrimaryColorDark},
                                                      Light={StaticResource LightPrimaryColor}}"
                    Text="PrimaryColor"
                    TextColor="{AppThemeBinding Dark={StaticResource OnPrimaryColorDark},
                                                Light={StaticResource LightOnPrimaryColor}}" />

                <Label
                    Grid.Row="2"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource PrimaryLightColorDark},
                                                      Light={StaticResource LightPrimaryLightColor}}"
                    Text="PrimaryLightColor"
                    TextColor="{AppThemeBinding Dark={StaticResource OnPrimaryColorDark},
                                                Light={StaticResource LightOnPrimaryColor}}" />

                <Label
                    Grid.Row="3"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource PrimaryDarkColorDark},
                                                      Light={StaticResource LightPrimaryDarkColor}}"
                    Text="PrimaryDarkColor"
                    TextColor="{AppThemeBinding Dark={StaticResource OnPrimaryColorDark},
                                                Light={StaticResource LightOnPrimaryColor}}" />

                <Label
                    Grid.Row="4"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource OnPrimaryColorDark},
                                                      Light={StaticResource LightOnPrimaryColor}}"
                    Text="OnPrimaryColor"
                    TextColor="{AppThemeBinding Dark={StaticResource PrimaryColorDark},
                                                Light={StaticResource LightPrimaryColor}}" />

                <!--  Secondary  -->
                <Label
                    Grid.Row="5"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource SecondaryColorDark},
                                                      Light={StaticResource LightSecondaryColor}}"
                    Text="SecondaryColor"
                    TextColor="{AppThemeBinding Dark={StaticResource DarkOnSecondaryColor},
                                                Light={StaticResource LightOnSecondaryColor}}" />

                <Label
                    Grid.Row="6"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource SecondaryDarkColorDark},
                                                      Light={StaticResource LightSecondaryDarkColor}}"
                    Text="SecondaryDarkColor"
                    TextColor="{AppThemeBinding Dark={StaticResource DarkOnSecondaryColor},
                                                Light={StaticResource LightOnSecondaryColor}}" />

                <Label
                    Grid.Row="7"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource SecondaryLightColorDark},
                                                      Light={StaticResource LightSecondaryLightColor}}"
                    Text="SecondaryLightColor"
                    TextColor="{AppThemeBinding Dark={StaticResource DarkOnSecondaryColor},
                                                Light={StaticResource LightOnSecondaryColor}}" />

                <Label
                    Grid.Row="8"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource DarkOnSecondaryColor},
                                                      Light={StaticResource LightOnSecondaryColor}}"
                    Text="OnSecondaryColor"
                    TextColor="{AppThemeBinding Dark={StaticResource SecondaryColorDark},
                                                Light={StaticResource LightSecondaryColor}}" />

                <!--  Card Backgrounds  -->
                <Label
                    Grid.Row="18"
                    BackgroundColor="{StaticResource CardBackGroundAddress}"
                    Text="CardBackGroundAddress"
                    TextColor="{AppThemeBinding Dark={StaticResource SecondaryLightColorDark},
                                                Light={StaticResource LightSecondaryLightColor}}" />

                <Label
                    Grid.Row="19"
                    BackgroundColor="{StaticResource CardBackGroundAttribute}"
                    Text="CardBackGroundAttribute"
                    TextColor="{AppThemeBinding Dark={StaticResource SecondaryLightColorDark},
                                                Light={StaticResource LightSecondaryLightColor}}" />
                <Label
                    Grid.Row="20"
                    BackgroundColor="{StaticResource CardBackGroundCitation}"
                    Text="CardBackGroundCitation"
                    TextColor="{AppThemeBinding Dark={StaticResource SecondaryLightColorDark},
                                                Light={StaticResource LightSecondaryLightColor}}" />
                <Label
                    Grid.Row="21"
                    BackgroundColor="{StaticResource CardBackGroundEvent}"
                    Text="CardBackGroundEvent"
                    TextColor="{AppThemeBinding Dark={StaticResource SecondaryLightColorDark},
                                                Light={StaticResource LightSecondaryLightColor}}" />

                <Label
                    Grid.Row="22"
                    BackgroundColor="{StaticResource CardBackGroundFamily}"
                    Text="CardBackGroundFamily"
                    TextColor="{AppThemeBinding Dark={StaticResource SecondaryLightColorDark},
                                                Light={StaticResource LightSecondaryLightColor}}" />
                <Label
                    Grid.Row="23"
                    BackgroundColor="{StaticResource CardBackGroundMedia}"
                    Text="CardBackGroundMedia"
                    TextColor="{AppThemeBinding Dark={StaticResource SecondaryLightColorDark},
                                                Light={StaticResource LightSecondaryLightColor}}" />
                <Label
                    Grid.Row="24"
                    BackgroundColor="{StaticResource CardBackGroundNote}"
                    Text="CardBackGroundNote"
                    TextColor="{AppThemeBinding Dark={StaticResource SecondaryLightColorDark},
                                                Light={StaticResource LightSecondaryLightColor}}" />
                <Label
                    Grid.Row="25"
                    BackgroundColor="{StaticResource CardBackGroundPlace}"
                    Text="CardBackGroundPlace"
                    TextColor="{AppThemeBinding Dark={StaticResource SecondaryLightColorDark},
                                                Light={StaticResource LightSecondaryLightColor}}" />
                <Label
                    Grid.Row="26"
                    BackgroundColor="{StaticResource CardBackGroundPerson}"
                    Text="CardBackGroundPerson"
                    TextColor="{AppThemeBinding Dark={StaticResource SecondaryLightColorDark},
                                                Light={StaticResource LightSecondaryLightColor}}" />
                <Label
                    Grid.Row="27"
                    BackgroundColor="{StaticResource CardBackGroundRepository}"
                    Text="CardBackGroundRepository"
                    TextColor="{AppThemeBinding Dark={StaticResource SecondaryLightColorDark},
                                                Light={StaticResource LightSecondaryLightColor}}" />
                <Label
                    Grid.Row="28"
                    BackgroundColor="{StaticResource CardBackGroundTag}"
                    Text="CardBackGroundTag"
                    TextColor="{AppThemeBinding Dark={StaticResource SecondaryLightColorDark},
                                                Light={StaticResource LightSecondaryLightColor}}" />
                <Label
                    Grid.Row="29"
                    BackgroundColor="{StaticResource CardBackGroundUtility}"
                    Text="CardBackGroundUtility"
                    TextColor="{AppThemeBinding Dark={StaticResource SecondaryLightColorDark},
                                                Light={StaticResource LightSecondaryLightColor}}" />

                <!--  Error Color  -->
                <Label
                    Grid.Row="30"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource ErrorColorDark},
                                                      Light={StaticResource LightErrorColor}}"
                    Text="ErrorColor"
                    TextColor="{AppThemeBinding Dark={StaticResource OnErrorColorDark},
                                                Light={StaticResource LightOnErrorColor}}" />

                <Label
                    Grid.Row="31"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource OnErrorColorDark},
                                                      Light={StaticResource LightOnErrorColor}}"
                    Text="OnErrorColor"
                    TextColor="{AppThemeBinding Dark={StaticResource ErrorColorDark},
                                                Light={StaticResource LightErrorColor}}" />

                <!--  Surface Color  -->

                <Label
                    Grid.Row="32"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource SurfaceColorDark},
                                                      Light={StaticResource LightSurfaceColor}}"
                    Text="SurfaceColor"
                    TextColor="{AppThemeBinding Dark={StaticResource OnSurfaceColorDark},
                                                Light={StaticResource LightOnSurfaceColor}}" />

                <Label
                    Grid.Row="33"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource OnSurfaceColorDark},
                                                      Light={StaticResource LightOnSurfaceColor}}"
                    Text="OnSurfaceColor"
                    TextColor="{AppThemeBinding Dark={StaticResource SurfaceColorDark},
                                                Light={StaticResource LightSurfaceColor}}" />

                <Label
                    Grid.Row="34"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource SurfaceDark1ColorDark},
                                                      Light={StaticResource LightSurfaceDark1Color}}"
                    Text="SurfaceDark1Color"
                    TextColor="{AppThemeBinding Dark={StaticResource OnSurfaceColorDark},
                                                Light={StaticResource LightOnSurfaceColor}}" />

                <Label
                    Grid.Row="35"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource SurfaceDark2ColorDark},
                                                      Light={StaticResource LightSurfaceDark2Color}}"
                    Text="SurfaceDark2Color"
                    TextColor="{AppThemeBinding Dark={StaticResource OnSurfaceColorDark},
                                                Light={StaticResource LightOnSurfaceColor}}" />

                <!--  Background Color  -->
                <Label
                    Grid.Row="36"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource BackgroundColorDark},
                                                      Light={StaticResource LightBackgroundColor}}"
                    Text="BackgroundColor"
                    TextColor="{AppThemeBinding Dark={StaticResource OnBackgroundColorDark},
                                                Light={StaticResource LightOnBackgroundColor}}" />

                <Label
                    Grid.Row="37"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource OnBackgroundColorDark},
                                                      Light={StaticResource LightOnBackgroundColor}}"
                    Text="OnBackgroundColor"
                    TextColor="{AppThemeBinding Dark={StaticResource BackgroundColorDark},
                                                Light={StaticResource LightBackgroundColor}}" />
            </Grid>

            <BoxView />

            <Button
                Command="{prismnav:NavigateTo 'MessageLogPage',
                                              Animated=True}"
                Style="{DynamicResource GVButtonStyle}"
                Text="Go To MessageLog" />



            <Button
                Command="{Binding TestCommand}"
                Style="{DynamicResource GVButtonStyle}"
                Text="Alert" />
        </StackLayout>
    </ScrollView>
</ContentPage>