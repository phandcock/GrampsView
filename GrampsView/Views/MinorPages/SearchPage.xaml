<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GrampsView.Views.SearchPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:prism="http://prismlibrary.com"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="http://xamarin.com/schemas/2020/toolkit"
    xmlns:i18n="clr-namespace:GrampsView.Assets.Strings"
    xmlns:behaviour="clr-namespace:GrampsView.Behaviours"
    xmlns:ucon="clr-namespace:GrampsView.UserControls"
    xmlns:viewmodels="clr-namespace:GrampsView.ViewModels"
    x:Name="SearchPageRoot"
    Title="{Binding BaseTitle}"
    prism:ViewModelLocator.AutowireViewModel="True"
    x:DataType="viewmodels:SearchPageViewModel"
    Appearing="ContentPage_Appearing"

    Style="{DynamicResource GVBaseContentPage}"
    mc:Ignorable="d">

    <!--  Header  -->

    <Page.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="flipBool" />
        </ResourceDictionary>
    </Page.Resources>

    <Shell.TitleView>
        <ucon:TopMenu />
    </Shell.TitleView>

    <!--  Content  -->
    <ScrollView>
        <StackLayout>

            <SearchBar
                x:Name="SearchBar"
                Grid.Row="0"
                Margin="3"
                BackgroundColor="{AppThemeBinding Dark={StaticResource SurfaceColorDark},
                                                  Light={StaticResource SurfaceColorLight}}"
                HorizontalOptions="FillAndExpand"
                HorizontalTextAlignment="Start"
                IsTabStop="True"
                SearchCommand="{Binding SearchCommand}"
                SearchCommandParameter="{Binding Text, Source={x:Reference SearchBar}}"
                TextColor="{DynamicResource OnSurfaceColor}">
                <SearchBar.Behaviors>
                    <behaviour:EventToCommandBehavior
                        Command="{Binding SearchButtonCommand}"
                        CommandParameter="{Binding Text, Source={x:Reference SearchBar}}"
                        EventName="SearchButtonPressed" />
                </SearchBar.Behaviors>
            </SearchBar>

            <ucon:InstructionCardLarge BindingContext="{x:Static i18n:AppResources.SearchPage_Instructions}" />

            <ucon:FlexSingleCard FsctSource="{Binding PersonList, Mode=OneWay}" FsctTemplate="{StaticResource PersonCardSmallDT}" />

            <ucon:FlexSingleCard FsctSource="{Binding PersonNameList, Mode=OneWay}" FsctTemplate="{StaticResource PersonNameCardSmallDT}" />

            <ucon:FlexSingleCard FsctSource="{Binding FamilyList, Mode=OneWay}" FsctTemplate="{StaticResource FamilyCardSmallDT}" />

            <ucon:FlexSingleCard FsctSource="{Binding EventList, Mode=OneWay}" FsctTemplate="{StaticResource EventCardSmallDT}" />

            <ucon:FlexSingleCard FsctSource="{Binding NoteList, Mode=OneWay}" FsctTemplate="{StaticResource NoteCardSmallDT}" />

            <ucon:FlexSingleCard FsctSource="{Binding AddressList, Mode=OneWay}" FsctTemplate="{StaticResource AddressCardSmallDT}" />

            <ucon:FlexSingleCard FsctSource="{Binding CitationList, Mode=OneWay}" FsctTemplate="{StaticResource CitationCardSmallDT}" />

            <ucon:FlexSingleCard FsctSource="{Binding MediaList, Mode=OneWay}" FsctTemplate="{StaticResource MediaCardSmallDT}" />

            <ucon:FlexSingleCard FsctSource="{Binding PlaceList, Mode=OneWay}" FsctTemplate="{StaticResource PlaceCardSmallDT}" />

            <ucon:InstructionCardLarge BindingContext="{x:Static i18n:AppResources.SearchPage_NothingFound}" IsVisible="{Binding BindingContext.SearchItemsFound, Converter={StaticResource flipBool}, Source={x:Reference SearchPageRoot}, Mode=OneWay}" />
        </StackLayout>
    </ScrollView>
</ContentPage>